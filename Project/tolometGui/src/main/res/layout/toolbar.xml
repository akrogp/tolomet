<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/my_menubar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:contentInsetStart="0dp"
            android:background="?attr/colorPrimary"
            android:elevation="4dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/toolbar_image"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_launcher" />
                <Spinner
                    android:id="@+id/station_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:prompt="@string/station_prompt" />
            </LinearLayout>
        </android.support.v7.widget.Toolbar>

        <!--<ProgressBar
            android:id="@+id/progressbar"
            android:layout_alignBottom="@id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:elevation="4dp"
            android:visibility="gone"/>-->

        <fr.castorflex.android.smoothprogressbar.SmoothProgressBar
            android:id="@+id/progressbar"
            android:layout_alignBottom="@id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:indeterminate="true"
            app:spb_interpolator="spb_interpolator_acceleratedecelerate"
            app:spb_sections_count="4"
            app:spb_color="#00BBBB"
            app:spb_speed="2.0"
            app:spb_stroke_width="4dp"
            app:spb_stroke_separator_length="4dp"
            app:spb_reversed="false"
            app:spb_mirror_mode="false"
            app:spb_progressiveStart_activated="true"
            app:spb_progressiveStart_speed="1.5"
            app:spb_progressiveStop_speed="3.4"
            android:elevation="4dp"
            android:visibility="gone"/>

    </RelativeLayout>

</merge>