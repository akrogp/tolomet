<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_help_index"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.akrog.tolomet.HelpActivity">

    <include layout="@layout/toolbar"/>

    <com.akrog.tolomet.view.HtmlView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="@string/help_intro"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:useDefaultMargins="true"
            app:columnCount="2">

            <LinearLayout android:orientation="vertical">
                <ImageView android:layout_height="wrap_content" android:layout_width="wrap_content"
                           android:src="@drawable/ic_favorite_outline"/>
                <ImageView android:layout_height="wrap_content" android:layout_width="wrap_content"
                           android:src="@drawable/ic_favorite"/>
            </LinearLayout>
            <com.akrog.tolomet.view.HtmlView android:layout_width="0dp" app:layout_gravity="fill_horizontal"
                      android:text="@string/help_favorite"/>

            <ImageView android:src="@drawable/ic_sync"/>
            <com.akrog.tolomet.view.HtmlView android:layout_width="0dp" app:layout_gravity="fill_horizontal"
                      android:text="@string/help_refresh"/>

            <ImageView android:src="@drawable/ic_charts"/>
            <com.akrog.tolomet.view.HtmlView android:layout_width="0dp" app:layout_gravity="fill_horizontal"
                      android:text="@string/help_charts"/>

            <ImageView android:src="@drawable/ic_info_outline"/>
            <com.akrog.tolomet.view.HtmlView android:layout_width="0dp" app:layout_gravity="fill_horizontal"
                      android:text="@string/help_info"/>

            <ImageView android:src="@drawable/ic_map"/>
            <com.akrog.tolomet.view.HtmlView android:layout_width="0dp" app:layout_gravity="fill_horizontal"
                      android:text="@string/help_map"/>

            <ImageView android:src="@drawable/ic_origin"/>
            <com.akrog.tolomet.view.HtmlView android:layout_width="0dp" app:layout_gravity="fill_horizontal"
                      android:text="@string/help_origin"/>

            <ImageView android:src="@drawable/ic_external"/>
            <com.akrog.tolomet.view.HtmlView android:layout_width="0dp" app:layout_gravity="fill_horizontal"
                      android:text="@string/help_browser"/>

            <ImageView android:src="@drawable/ic_share"/>
            <com.akrog.tolomet.view.HtmlView android:layout_width="0dp" app:layout_gravity="fill_horizontal"
                      android:text="@string/help_share"/>

            <ImageView android:src="@drawable/ic_whatsapp"/>
            <com.akrog.tolomet.view.HtmlView android:layout_width="0dp" app:layout_gravity="fill_horizontal"
                      android:text="@string/help_whatsapp"/>

            <LinearLayout android:orientation="vertical">
                <ImageView android:layout_height="wrap_content" android:layout_width="wrap_content"
                           android:src="@drawable/ic_flight_mode"/>
                <ImageView android:layout_height="wrap_content" android:layout_width="wrap_content"
                           android:src="@drawable/ic_land_mode"/>
            </LinearLayout>
            <com.akrog.tolomet.view.HtmlView android:layout_width="0dp" app:layout_gravity="fill_horizontal"
                      android:text="@string/help_fly"/>

            <ImageView android:src="@drawable/ic_settings"/>
            <com.akrog.tolomet.view.HtmlView android:layout_width="0dp" app:layout_gravity="fill_horizontal"
                      android:text="@string/help_settings"/>

            <ImageView android:src="@drawable/ic_mail"/>
            <com.akrog.tolomet.view.HtmlView android:layout_width="0dp" app:layout_gravity="fill_horizontal"
                      android:text="@string/help_report"/>

            <LinearLayout android:orientation="vertical">
                <ImageView android:layout_height="wrap_content" android:layout_width="wrap_content"
                           android:src="@drawable/ic_widget" android:tint="#FFAA0000"/>
                <ImageView android:layout_height="wrap_content" android:layout_width="wrap_content"
                           android:src="@drawable/ic_widget" android:tint="#FFAAAA00"/>
                <ImageView android:layout_height="wrap_content" android:layout_width="wrap_content"
                           android:src="@drawable/ic_widget" android:tint="#FF00AA00"/>
            </LinearLayout>
            <com.akrog.tolomet.view.HtmlView android:layout_width="0dp" app:layout_gravity="fill_horizontal"
                          android:text="@string/help_widget"/>
        </android.support.v7.widget.GridLayout>
    </ScrollView>

</LinearLayout>
