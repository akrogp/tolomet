        <EditTextPreference
            android:key="wmaxDir0"
            android:inputType="number"
            android:maxLines="1"
            android:title="@string/max_dir_prompt"
            android:dialogTitle="@string/spot_prompt"/>
        <EditTextPreference
            android:key="wminWind0"
            android:inputType="number"
            android:maxLines="1"
            android:title="@string/min_wind_prompt"
            android:dialogTitle="@string/spot_prompt"/>
        <EditTextPreference
            android:key="wmaxWind0"
            android:inputType="number"
            android:maxLines="1"
            android:title="@string/max_wind_prompt"
